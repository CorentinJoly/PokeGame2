{% extends 'base.html.twig' %}

{% block body %}

<h2>Connexion</h2>

<form method="POST" action="{{ path('connexion') }}">
    {% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
	<div class="container">
		<label><b>Nom d'utilisateur ou email</b></label>
		<input type="text" placeholder="Nom d'utilisateur" name="_username" value="{{ last_username }}" required>

		<label><b>Mot de passe</b></label>
		<input type="password" placeholder="Entrer Mot de passe" name="_password" required>

		<button type="submit">Se connecter</button>
	</div>

</form>
{% endblock %}